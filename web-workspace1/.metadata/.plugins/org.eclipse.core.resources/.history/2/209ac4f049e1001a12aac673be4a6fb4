<meta charset="UTF-8">
<title>javascript confirm</title>
<script type="text/javascript">
	function confirmTest(){
		var result=confirm("재우가 똥을싸냐?");
		if(result){
			alert("똥방구노래 시작~~");
		}else{
			locaton.href="http://www.naver.com";
		}
	}
</script>
</head>
<body>
<input type="button" value="테스트" onclick="confirmTest()">
</body>
